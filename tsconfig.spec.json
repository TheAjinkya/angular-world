/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "module": "CommonJs",
    "esModuleInterop": true, // 2
    "emitDecoratorMetadata": true, // 3
    "files": [
      "src/setup.jest.ts",
      "src/polyfills.ts",
    ]
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
